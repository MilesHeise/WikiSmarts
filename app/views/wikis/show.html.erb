<div>
  <h1>
    <%= @wiki.title %>
    <br>
    <small>
      Last updated
      <%= time_ago_in_words(@wiki.updated_at) %>
      ago
    </small>
  </h1>
</div>

<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit Wiki", edit_wiki_path(@wiki), class: 'btn btn-success' %>
  </div>
</div>

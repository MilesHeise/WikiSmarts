<% if user.role == "premium" %>
  <%= link_to charges_path, class: 'btn btn-danger',
  data: { confirm: "Are you sure you want to downgrade?\n\nAll your private wikis will become public." },
  method: :delete do %>
    Downgrade Membership?
  <% end %>
  <% else %>
    <%= link_to new_charges_path, class: 'btn btn-primary' do %>
      Upgrade to Premium?
  <% end %>
<% end %>
